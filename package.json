{
  "name": "kenobot",
  "version": "0.6.0",
  "type": "module",
  "description": "Personal AI assistant with Star Wars personality",
  "main": "src/index.js",
  "bin": {
    "kenobot": "src/cli.js"
  },
  "files": [
    "src/",
    "templates/",
    "bin/"
  ],
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run test/e2e/ --fileParallelism=false",
    "test:conversations": "vitest run test/conversations/ --fileParallelism=false",
    "lint": "eslint src/",
    "lint:boundaries": "eslint --rule '{\"boundaries/element-types\": \"error\"}' src/"
  },
  "keywords": [
    "ai",
    "assistant",
    "telegram",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.73.0",
    "@google/genai": "^1.40.0",
    "dotenv": "^16.4.7",
    "grammy": "^1.32.0",
    "node-cron": "^4.2.1"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "eslint-plugin-boundaries": "^5.4.0",
    "vitest": "^4.0.18"
  },
  "optionalDependencies": {
    "better-sqlite3": "^12.6.2"
  }
}
