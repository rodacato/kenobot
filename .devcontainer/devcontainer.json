{
  "name": "KenoBot",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "node",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    },
    "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {}
  },
  "postCreateCommand": "git config core.hooksPath .githooks && git config pull.rebase true && npm install",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "files.eol": "\n"
      },
      "extensions": [
        "editorconfig.editorconfig",
        "dbaeumer.vscode-eslint",
        "anthropic.claude-code"
      ]
    }
  },
  "forwardPorts": [8421],
  "remoteEnv": {
    "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}",
    "GEMINI_API_KEY": "${localEnv:GEMINI_API_KEY}",
    "TELEGRAM_BOT_TOKEN": "${localEnv:TELEGRAM_BOT_TOKEN}",
    "TELEGRAM_ALLOWED_CHAT_ID": "${localEnv:TELEGRAM_ALLOWED_CHAT_ID}"
  },
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.gitconfig,target=/home/node/.gitconfig,type=bind,consistency=cached"
  ]
}
